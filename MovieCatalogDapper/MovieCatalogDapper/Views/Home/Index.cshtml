@model IEnumerable<MovieCatalogDapper.Model.MovieListView>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Movie List</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Rating</th>
                <th></th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.GenreType</td>
                    <td>@movie.RatingName</td>
                    <td>
                        @using (Html.BeginForm("DeleteMovie", "Home", new {id = movie.MovieId}, FormMethod.Post))
                        {
                            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete @movie.Title?')">Delete</button>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("edit", "EditMovie", "Home",
                            new {id = @movie.MovieId}, new {@class = "btn btn-primary"})
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>